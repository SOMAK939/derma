<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Doctor Login</title>
  <link rel="stylesheet" href="/register.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  <style>
    .error-msg {
      color: #d8000c;
      background-color: #ffbaba;
      border-left: 6px solid #d8000c;
      padding: 10px;
      margin-bottom: 15px;
      border-radius: 5px;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h2>Doctor Login</h2>
    <form action="/doctorlogin" method="POST" onsubmit="return validateForm()">
      <div class="form-group">
        <label for="phone">Phone Number</label>
        <input type="tel" id="phone" name="phoneNumber" placeholder="e.g., 9876543210" required />
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required />
      </div>
      <% if (error) { %>
  <p class="error-msg"><%= error %></p>
<% } %>

      <button type="submit" class="submit-btn">Login</button>
    </form>
    <p class="login-link">New Doctor? <a href="/doctor">Register here</a></p>
  </div>
<a href="/home" class="icon-back-btn" aria-label="Go back">
    <i class="fa-solid fa-arrow-left"></i>
  </a>
  <script>
    function validateForm() {
      const phone = document.getElementById('phone').value.trim();
      if (!/^\d{10}$/.test(phone)) {
        alert('Phone number must be exactly 10 digits.');
        return false;
      }
      return true;
    }
  </script>
</body>
</html>
